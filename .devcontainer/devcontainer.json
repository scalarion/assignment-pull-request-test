{
  "name": "Assignment Pull Request Creator",
  "image": "ghcr.io/majikmate/classroom-codespace-image:latest",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "GitHub.vscode-github-actions",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.flake8Enabled": true,
        "files.associations": {
          "*.yml": "yaml",
          "*.yaml": "yaml"
        },
        "yaml.validate": true,
        "yaml.format.enable": true
      }
    }
  },

  "postCreateCommand": "pip install -r requirements.txt",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=/workspaces/${localWorkspaceFolderBasename}/.git,type=bind,consistency=cached"
  ],

  "forwardPorts": [],

  "portsAttributes": {}
}
